        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:semana2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="90,65,0,0" VerticalAlignment="Top" Width="50"/>
        <TextBox x:Name="Usuario" HorizontalAlignment="Left" Margin="145,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="307" TextChanged="TextBox_TextChanged"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="68,111,0,0" VerticalAlignment="Top" Width="72"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="145,119,0,0" VerticalAlignment="Top" Width="307"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="284,197,0,0" VerticalAlignment="Top" Width="66" Click="Button_Click"/>


    </Grid>
</Window>
